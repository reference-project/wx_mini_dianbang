.container{
  height: 100vh;
  background: #F3F4F6;
}
.head-div{
  text-align: center;
  width: 100%;
  position: fixed;
  background: #FFFFFF;
  top: 0;
  z-index: 2;
}
.head-div .titleText{
  color: #000000;
  font-weight: bold;
  font-size: 37rpx;
  text-align: center;
  display: inline-block;
  padding-top: 67rpx;
}
.scroll-view_H{
  width: 100%;
  white-space: nowrap;
  height: 88rpx;
  line-height: 88rpx;
  /* margin-top: 22rpx; */
}
.scroll-view_H .scroll-view-item{
  width: 20%;
  display: inline-block;
  color: #909090;
  font-size: 28rpx;
  position: relative;
}
.scroll-view_H .scroll-view-item.on{
  color: #333333;
  font-weight:500;
}
.scroll-view_H .scroll-view-item.on::before{
    content: "";
    width: 26rpx;
    left: 40%;
    height: 8rpx;
    background-color: #F0A710;
    position: absolute;
    bottom: 0;
}
.wrap{
  background: #F3F4F6;
  width: 100%;
  margin-top: 108rpx;
}
.wrap .items{
  background: #FFFFFF;
  border-radius:20px;
  margin: 0 24rpx 20rpx;
  padding: 24rpx;
  display: inline-block;
  position: relative;
  text-align: left;
  width: calc(100% - 96rpx);
}
.wrap .items .style{
  float: right;
  color: #F0A710;
  font-size: 24rpx;
  display: inline-block
}
.wrap .items .user{
  margin-bottom: 34rpx;
  color: #333333;
  font-size: 24rpx;
  vertical-align: top;
  line-height: 32rpx;
  height: 32rpx;
  display: inline-flex;
  background: url('http://zhishan-test.oss-cn-beijing.aliyuncs.com/dianbang-gg%2Fimage%2Fall_more_icon.png')no-repeat center right;
  background-size: 11rpx 18rpx;
  padding-right: 24rpx;
}
.wrap .items .user .icon{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}
.wrap .items .user text{
  color: #909090;
  font-size: 24rpx;
  margin-left: 16rpx;
}
.wrap .content{
  width: 100%;
  height: 165rpx;
  margin-bottom: 20rpx;
}
.wrap .content image{
  width: 165rpx;
  height: 165rpx;
  margin-right: 24rpx;
  vertical-align: top;
}
.wrap .content .right-div{
  display: inline-block;
  text-align: left;
  width: calc(100% - 190rpx);
}
.wrap .content .right-div .title{
  color: #333333;
  font-size: 28rpx;
}
.wrap .content .right-div .type{
  color: #909090;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.wrap .content .right-div .money{
  color: #333333;
  font-size: 28rpx;
  font-weight:500;
  margin-top: 20rpx;
}
.wrap .content .right-div .money text{
  color: #909090;
  font-size: 24rpx;
  font-weight:500;

}
.wrap .items .total{
  float: right;
  color: #323232;
  font-size: 24rpx;
  margin-top: 18rpx
}
.wrap .nav-btn{
  width: 100%;
  position: relative;
  display: inline-table;
}
.wrap .nav-btn button{
  float: right;
  width: auto;
  padding: 0 24rpx;
  height: 53rpx;
  line-height: 53rpx;
  display: inline-block;
  border:1rpx solid rgba(240,167,16,1);
  border-radius:27rpx;
  background: #FFFFFF;
  color: #F0A710;
  font-size: 26rpx;
  text-align: center;
  margin-top: 59rpx;
}
.wrap .nav-btn .cancel{
  border:1rpx solid rgba(214,215,220,1);
  border-radius:27px;
  color: #909090;
  margin-right: 30rpx;
}